<div class="container">
  <blockquote class="quote slide-in">
    <slot />
  </blockquote>
</div>
<style>
  .quote {
    max-width: 700px;
    color: #222222;
    font-size: 18px;
    font-weight: 700;
    margin: 0 auto;
    padding: 32px 0 48px;
    transform: translateX(120px);
  }

  html[dir="rtl"] .quote {
    transform: translateX(-120px);
  }

  @media (max-width: 900px) {
    .quote {
      transform: none;
      padding-inline-start: 32px;
    }

    html[dir="rtl"] .quote {
      transform: none;
    }
  }
</style>
